source $DOTFILES/zsh/antigen/antigen.zsh

# antigen bundles
antigen use oh-my-zsh
antigen bundle zsh-users/zsh-syntax-highlighting
antigen bundle zsh-users/zsh-completions
# antigen bundle colored-man
antigen bundle vi-mode
antigen theme $DOTFILES/zsh local/teensy
antigen apply

# rvm as a function
[[ -s "$RVM_HOME/scripts/rvm" ]] && source "$RVM_HOME/scripts/rvm"

# aliases
alias gs='git status'
alias xrdb-reload='xrdb -I$DOTFILES/x11 -load $DOTFILES/x11/xresources'

export PATH=$PATH:/home/alex/.conda/envs/my_root/bin:/opt/anaconda/bin:/home/alex/.config/bspwm/panel:/home/alex/.local/bin:
