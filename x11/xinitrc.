#!/bin/sh

# arch keeps system level xinitrc.d/* files
# load them if they're present.

if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# keyboard and mouse
setxkbmap -variant dvorak -option ctrl:nocaps

xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation" 1
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Button" 2
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Timeout" 200
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Axes" 6 7 4 5

# visual themes
xrdb -load $DOTFILES/x11/xresources

# session stuff
# - systray, applets, copy.com, etc.
# - ssh-agent?
# - polkit?

# exec i3

compton &
. ~/.fehbg
$DOTFILES/bin/backlight restore

sxhkd &
exec bspwm
