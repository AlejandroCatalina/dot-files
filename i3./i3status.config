general {
	output_format = "i3bar"
	colors = true
	interval = 1

    color_good = "#5dbed3"
    color_degraded = "#e84f4f"
    color_bad = "#e1aa5d"
}

order += "wireless wlp4s0"
order += "ethernet enp0s25"
order += "disk /"
order += "disk /home"
order += "battery 1"
order += "volume master"
order += "tztime local"

disk "/" {
	format = "  / %avail"
}

disk "/home" {
	format = "  /home %avail"
}

wireless wlp4s0 {
	format_up = " %essid"
	format_down = "W: down"
}

ethernet enp0s25 {
	format_up = " %ip"
	format_down = "E: down"
}

battery 1 {
    hide_seconds       = true
    last_full_capacity = true
	  path   = "/sys/class/power_supply/BAT0/uevent"

    status_chr  = "  "
    status_bat  = ""
    status_full = " "
    format = "%status %remaining"
}

volume master {
    format = "  %volume"
    format_muted = "   muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
   format = "%m-%d %H:%M"
   timezone = "Europe/Madrid"
}

